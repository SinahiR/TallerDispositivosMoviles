<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f7caca">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUEGO PULSOR"
            android:textSize="30dp"
            android:layout_marginLeft="70dp"
            android:textColor="#c75ca9"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presiona el boton rojo cuando los dos numeros coincidan"
            android:textColor="#2743ab"
          />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nf"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="175dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nr"
        android:layout_marginTop="50dp"
        android:background="#d71f1f"
        android:layout_marginLeft="140dp"/>



        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugar"
            android:id="@+id/intento"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="140dp"
            android:background="#5792ce"/>

    </LinearLayout>



</LinearLayout>